package section2;
// 생성자를 만들어서 코드를 개선
public class Term3 {
	public int coef; //계수를 음이 아닌정수라고 가정
	public int expo;
	
	public Term3(int c, int e)
	{
		coef = c;
		expo = e; //매개변수로 받은 생성자를 초기화
	}

	public int calcTerm(int x) 
	{
		return (int)(coef * Math.pow( x, expo)) ; //지수함수 계산
	}

	public void printTerms() 
	{
		System.out.print(coef + "x^" + expo);
	}
}